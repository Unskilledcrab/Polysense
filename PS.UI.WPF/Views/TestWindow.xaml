<Window x:Class="PS.UI.WPF.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:kanban="clr-namespace:Syncfusion.UI.Xaml.Kanban;assembly=Syncfusion.SfKanban.WPF"
        xmlns:Notification="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
		xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}"
        syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=MaterialDark}">
    <Grid>
        <StackPanel>
            <Button Command="{Binding UpdateCommand}" Content="Get New Content" />
            <Notification:SfBusyIndicator IsBusy="{Binding IsBusy}">
                <kanban:SfKanban ItemsSource="{Binding ScraperTasks}">

                    <kanban:SfKanban.IndicatorColorPalette>
                        <kanban:ColorMapping Color="#FFECB93C"
                                     Key="High"></kanban:ColorMapping>
                        <kanban:ColorMapping Color="#FF57B94C"
                                     Key="Normal"></kanban:ColorMapping>
                        <kanban:ColorMapping Color="#FF5187C6"
                                     Key="Low"></kanban:ColorMapping>
                    </kanban:SfKanban.IndicatorColorPalette>

                    <kanban:KanbanColumn Categories="Uncategorized"
                                         Title="Uncategorized" />

                    <kanban:KanbanColumn Categories="UnderReview"
                                         Title="UnderReview" />
                    <kanban:KanbanColumn Categories="Bias"
                                         Title="Bias" />
                    <kanban:KanbanColumn Categories="UnBias"
                                         Title="UnBias" />
                </kanban:SfKanban>
            </Notification:SfBusyIndicator>
        </StackPanel>
    </Grid>
</Window>